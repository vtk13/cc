{% extends "site.layout.twig" %}

{% block content %}
<div class="row">
    <div class="col-xs-12">
        <h3>Добавить продукт</h3>
        <form method="post">
            <div class="form-group">
                <label>Штрих-код</label>
                <input class="form-control" name="bar_code">
            </div>
            <div class="form-group">
                <label>Название</label>
                <input class="form-control" name="title">
            </div>
            <div class="form-group">
                <label>Продается ли товар в фиксированной упаковке?</label>
                <select class="form-control" name="packed">
                    <option value="0">Нет, товар продает на разновес либо в упаковках с разным весом</option>
                    <option value="1">Да, товар продается фиксирванными упаковками</option>
                </select>
            </div>
            <div class="form-group">
                <label>Единица измерения</label>
                <select class="form-control" name="unit">
                    {% for unit in units %}
                        <option value="{{ unit.id }}">{{ unit.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>Количество в упаковке</label>
                <input class="form-control" name="pack_volume" value="1">
            </div>
            <div class="form-group">
                <button class="btn btn-success">Добавить</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}